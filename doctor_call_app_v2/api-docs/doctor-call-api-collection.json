    {
      "name": "Authentication",
      "description": "نظام المصادقة وإدارة المستخدمين",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"اختبار المستخدم\",\n  \"email\": \"test@doctorcall.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{API_URL}}/auth/register",
              "host": ["{{API_URL}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('TOKEN', responseJson.access_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@doctorcall.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{API_URL}}/auth/login",
              "host": ["{{API_URL}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{TOKEN}}"
              }
            ],
            "url": {
              "raw": "{{API_URL}}/auth/me",
              "host": ["{{API_URL}}"],
              "path": ["auth", "me"]
            }
          }
        },
        {
          "name": "Update Profile",
